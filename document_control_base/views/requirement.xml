<openerp>
	<data>
		<record id="document_control_base.requirement_list" model="ir.ui.view">
			<field name="model">document_control_base.requirement</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="document_name_id"/>
					<field name="resource_type"/>
				</tree>
			</field>
		</record>

		<record id="document_control_base.requirement_form" model="ir.ui.view">
			<field name="model">document_control_base.requirement</field>
			<field name="arch" type="xml">
				<form string="Requerimientos">
					<sheet>
						<label for="name" class="oe_edit_only" />
						<h1>
							<field name="name" />
						</h1>
						<group>
							<group>
								<field name="resource_type"/>								
								<field name="document_name_id"/>
							</group>
							<group>
								<field name="condition_res_ids" widget="many2many_tags"/>
								<field name="condition_doc_ids" widget="many2many_tags"/>
							</group>
						</group>
						<group>
							<group>
						<field name="description" />
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>
		<record id="document_control_base.group_requirement_list" model="ir.ui.view">
			<field name="model">document_control_base.group_requirement</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name"/>
					<field name="res_partner_id"/>
					<field name="instance"/>
				</tree>
			</field>
		</record>

		<record id="document_control_base.group_requirement_form" model="ir.ui.view">
			<field name="model">document_control_base.group_requirement</field>
			<field name="arch" type="xml">
				<form string="Grupo de Requerimientos">
					<sheet>
						<label for="name" class="oe_edit_only" />
						<h1>
							<field name="name" />
						</h1>
						<group>
							<group>
								<field name="res_partner_id"/>
								<field name="expiration_date" invisible="1"/>
								<field name="instance"/>
								<field name="requirement_ids" widget="one2many_list" context="{'default_group_requirement_id':id,'readonly_group_requirement_id':True}"/>
							</group>
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="document_control_base.group_req_requirement_rel_list" model="ir.ui.view">
			<field name="model">document_control_base.group_req_requirement_rel</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name" />
					<field name="requirement_id"/>
					<field name="group_requirement_id"/>
					<field name="priority"/>
				</tree>
			</field>
		</record>
		<record id="document_control_base.group_req_requirement_rel_form" model="ir.ui.view">
			<field name="model">document_control_base.group_req_requirement_rel</field>
			<field name="arch" type="xml">
				<tree>
					<field name="name" />
					<field name="group_requirement_id"/>
					<field name="requirement_id" domain="[('group_requirement_id','=',group_requirement_id)]"/>
					<field name="priority"/>
					<field name="penalty"/>
				</tree>
			</field>
		</record>

	</data>
</openerp>